<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <AssemblyName>MyOTKE.Views.Renderables.ReactivePrimitives</AssemblyName>
    <RootNamespace>MyOTKE.Views.Renderables.ReactivePrimitives</RootNamespace>
	<DocumentationFile>MyOTKE.Views.Renderables.Primitives.xml</DocumentationFile>
    
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>My Open Toolkit Engine, view engine: Renderable for ReactiveX-managed primitives</Description>
  </PropertyGroup>

  <ItemGroup>
	<None Remove="$(DocumentationFile)" />
    <None Remove="Colored.Fragment.glsl" />
    <None Remove="Colored.Vertex.glsl" />
  </ItemGroup>

  <ItemGroup>
	<EmbeddedResource Include="Colored.Fragment.glsl">
      <LogicalName>Colored.Fragment.glsl</LogicalName>
	</EmbeddedResource>
    <EmbeddedResource Include="Colored.Vertex.glsl">
	  <LogicalName>Colored.Vertex.glsl</LogicalName>
	</EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\Core.csproj" />
    <ProjectReference Include="..\ReactiveBuffers\ReactiveBuffers.csproj" />
    <ProjectReference Include="..\Views\Views.csproj" />
  </ItemGroup>

</Project>
